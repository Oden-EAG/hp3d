!--------------------------------------------------------------------
subroutine customize_geometry_prova
!--------------------------------------------------------------------
#include "cinout.blk"
!--------------------------------------------------------------------
IMPLICIT NONE
!--------------------------------------------------------------------
  character (len = 20) :: object
  integer              :: error
!--------------------------------------------------------------------
!
     write(*,*)'her e'
! ..read object type
    read(N_GEO, IOSTAT = error) object
    if (error .ne. 0) then
      write(*,*)' customize_geometry: error reading file.'
      stop
    endif
! ..select geometry object
    select case(object)
      case('sphere')
        call customize_sphere
      case('shells')
        call customize_shells
      case('head')
        call customize_head
      case default
        write(*,*)' customize geometry: unknown object.'
        stop
! ..end select geometry object
    end select
!
end subroutine customize_geometry_prova
!--------------------------------------------------------------------
